<h1 class="text-center py-2">Eat Da Burger</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="list-boxes">
                <h2>Devour a burger</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        <div class="burger-box">{{burger_name}} <button class="devour" data-id={{id}}>Devour</button>
                            <button class="delete-burger" data-id={{id}}>Gross! Throw Away!</button>
                        </div>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

        </div>
        <div class="col">
            <div>
                <h2>Add a Burger</h2>

                <img class="patrick" src="https://media.giphy.com/media/IgOEWPOgK6uVa/source.gif" width="100%">
                <div class="new-burger-section">
                    <!-- Create a button in `index.handlebars` that will submit the user input into the database. -->
                    <form class="create-form">
                        <div class="form-group py-2">
                            <label for="new-burger">Burger Name:</label>
                            <input type="text" id="new-burger" name="burger-input"><button type="submit"
                                id="devour-btn">Add Burger</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="list-boxes">
                <h2>Devoured burgers</h2>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        <div class="burger-box">{{burger_name}}</div>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>

        </div>
    </div>
</div>